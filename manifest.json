{
  "manifest_version": 3,
  "name": "Auto Shorts Scroller & Liker",
  "version": "1.0.16",
  "description": "Automate scrolling and liking YouTube Shorts videos with configurable settings and timing controls.",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "alarms",
    "scripting"
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/shorts/*"
      ],
      "js": [
        "content_script.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}